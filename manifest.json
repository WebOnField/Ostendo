{
    "manifest_version": 3,
    "name": "Ostendo - l'Accessibilité des sites français",
    "description": "Ostendo permet d'afficher, dans vos résultats de recherches Bing et Google, le taux de conformité d'accessibilité des sites français.",
    "version": "1.5",
    "icons": {
        "16": "logo/googleaccess_16.png",
        "48": "logo/googleaccess_48.png",
        "128": "logo/googleaccess_128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Ostendo",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources": [
        {
          "resources": [ "settings/settings.html" ],
          "matches": ["<all_urls>"]
      },
      {
        "resources": ["json/list.json"],
        "matches": ["<all_urls>"]
    }
],
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": [
            "https://www.google.com/search?q=*",
            "https://www.google.fr/search?q=*",
            "https://www.bing.fr/search?q=*",
            "https://www.bing.com/search?q=*"
        ]
    }]
}
